{
    "project": "A-OS Sovereign Design System",
    "version": "1.1.0",
    "philosophy": {
        "zeroHardcoded": true,
        "wcagCompliant": "AA",
        "mobileFirst": true,
        "atomic": true,
        "aesthetic": "Rugged Sovereign / Enterprise Glass"
    },
    "breakpoints": {
        "xs": "320px",
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
    },
    "grid": {
        "columns": 12,
        "gap": {
            "xs": "0.5rem",
            "sm": "1rem",
            "md": "1.5rem",
            "lg": "2rem"
        },
        "container": {
            "xs": "100%",
            "sm": "640px",
            "md": "768px",
            "lg": "1024px",
            "xl": "1280px"
        }
    },
    "colors": {
        "semantic": {
            "primary": {
                "base": "#3b82f6",
                "hover": "#2563eb",
                "active": "#1d4ed8",
                "text": "#ffffff",
                "description": "Main actions, highlights, system identity"
            },
            "secondary": {
                "base": "#10b981",
                "hover": "#059669",
                "active": "#047857",
                "text": "#ffffff",
                "description": "Secondary actions, growth, agriculture"
            },
            "accent": {
                "base": "#f59e0b",
                "hover": "#d97706",
                "active": "#b45309",
                "text": "#ffffff",
                "description": "Attention, highlights, savanna sun"
            },
            "success": {
                "base": "#10b981",
                "text": "#ecfdf5"
            },
            "warning": {
                "base": "#f59e0b",
                "text": "#fffbeb"
            },
            "error": {
                "base": "#ef4444",
                "text": "#fef2f2"
            },
            "info": {
                "base": "#3b82f6",
                "text": "#eff6ff"
            },
            "offline": {
                "base": "#64748b",
                "text": "#f8fafc",
                "description": "Status for offline state"
            }
        },
        "neutral": {
            "50": "#f8fafc",
            "100": "#f1f5f9",
            "200": "#e2e8f0",
            "300": "#cbd5e1",
            "400": "#94a3b8",
            "500": "#64748b",
            "600": "#475569",
            "700": "#334155",
            "800": "#1e293b",
            "900": "#0f172a",
            "950": "#020617"
        },
        "surface": {
            "base": "#0f172a",
            "elevated": "#1e293b",
            "glass": "rgba(15, 23, 42, 0.6)",
            "border": "rgba(255, 255, 255, 0.1)",
            "overlay": "rgba(2, 6, 23, 0.8)"
        }
    },
    "typography": {
        "fontFamily": {
            "sans": "Inter, system-ui, -apple-system, sans-serif",
            "display": "Outfit, sans-serif",
            "mono": "JetBrains Mono, monospace"
        },
        "fontSize": {
            "xs": "0.75rem",
            "sm": "0.875rem",
            "base": "1rem",
            "lg": "1.125rem",
            "xl": "1.25rem",
            "2xl": "1.5rem",
            "3xl": "1.875rem",
            "4xl": "2.25rem",
            "5xl": "3rem"
        },
        "fontWeight": {
            "light": 300,
            "normal": 400,
            "medium": 500,
            "semibold": 600,
            "bold": 700
        },
        "lineHeight": {
            "none": 1,
            "tight": 1.25,
            "snug": 1.375,
            "normal": 1.5,
            "relaxed": 1.625,
            "loose": 2
        }
    },
    "spacing": {
        "0": "0",
        "px": "1px",
        "0.5": "0.125rem",
        "1": "0.25rem",
        "2": "0.5rem",
        "3": "0.75rem",
        "4": "1rem",
        "5": "1.25rem",
        "6": "1.5rem",
        "8": "2rem",
        "10": "2.5rem",
        "12": "3rem",
        "16": "4rem",
        "20": "5rem",
        "24": "6rem"
    },
    "borderRadius": {
        "none": "0",
        "sm": "0.125rem",
        "md": "0.375rem",
        "lg": "0.5rem",
        "xl": "0.75rem",
        "2xl": "1rem",
        "3xl": "1.5rem",
        "full": "9999px"
    },
    "shadows": {
        "none": "none",
        "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
        "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
        "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
        "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)",
        "glass": "0 8px 32px 0 rgba(31, 38, 135, 0.37)",
        "glow": {
            "primary": "0 0 20px rgba(59, 130, 246, 0.5)",
            "success": "0 0 20px rgba(16, 185, 129, 0.5)",
            "error": "0 0 20px rgba(239, 68, 68, 0.5)"
        }
    },
    "animations": {
        "duration": {
            "instant": "50ms",
            "fast": "150ms",
            "base": "250ms",
            "slow": "500ms",
            "slower": "750ms"
        },
        "easing": {
            "linear": "linear",
            "in": "cubic-bezier(0.4, 0, 1, 1)",
            "out": "cubic-bezier(0, 0, 0.2, 1)",
            "in-out": "cubic-bezier(0.4, 0, 0.2, 1)",
            "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
        }
    },
    "transitions": {
        "all": "all 250ms cubic-bezier(0, 0, 0.2, 1)",
        "colors": "color, background-color, border-color 250ms cubic-bezier(0, 0, 0.2, 1)",
        "opacity": "opacity 250ms cubic-bezier(0, 0, 0.2, 1)",
        "transform": "transform 250ms cubic-bezier(0, 0, 0.2, 1)"
    },
    "zIndex": {
        "base": 0,
        "dropdown": 10,
        "sticky": 20,
        "modal": 30,
        "popover": 40,
        "tooltip": 50
    }
}